{
  "name": "page-sections",
  "version": "0.0.5",
  "description": "A simple section solution for your single page or landing page. Vanilla js, no framework dependencies, small footprint.",
  "main": "dist/page-sections.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "snazzy 'src/*.js' && ./node_modules/.bin/wct",
    "travis": "./node_modules/.bin/wct ",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha test/*.js --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuclei/page-sections.git"
  },
  "keywords": [
    "sections",
    "layout",
    "web-components",
    "ui",
    "vanillajs"
  ],
  "author": "Lukas Oppermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuclei/page-sections/issues"
  },
  "homepage": "https://github.com/nuclei/page-sections#readme",
  "devDependencies": {
    "@webcomponents/custom-elements": "^1.0.0-alpha.3",
    "@webcomponents/shadycss": "github:webcomponents/shadycss",
    "@webcomponents/shadydom": "github:webcomponents/shadydom",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-preset-latest": "^6.16.0",
    "coveralls": "^2.11.15",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-sourcemaps": "^1.9.1",
    "gulp-webmake": "0.0.41",
    "istanbul": "^0.4.5",
    "mocha-istanbul": "^0.3.0",
    "require1k": "^1.0.1",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0",
    "web-component-tester": "^5.0.0",
    "web-component-tester-istanbul": "^0.10.0"
  }
}
